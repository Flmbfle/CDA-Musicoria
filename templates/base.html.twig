        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}
            {% block importmap %}
                <script src="{{ asset('toast.js') }}"></script>
            {% endblock %}
        {% endblock %}

    </head>
    <body class="d-flex flex-column min-vh-100 col-9 mx-auto bg-black border border-1 border-dark">
        {% include "partials/navbar.html.twig" %}

        
        <main class="d-flex flex-column flex-fill bg-white shadow-lg align-items-center justify-content-center p-0 m-0">
            <div class="container">
                <div class="d-flex justify-content-center align-items-center">
                    {% include "partials/toasts.html.twig" %}
                </div>
                
                {% block body %}
                {% endblock %}
            </div>
        </main>

        {% include "partials/footer.html.twig" %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>