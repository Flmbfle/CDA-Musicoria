<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Renseigner votre adresse</h2>

        <form method="post">
            {{ form_start(form) }}

            <div class="mb-3">
                <label for="ligne1" class="form-label fw-bold">Adresse</label>
                {{ form_widget(form.ligne1, {'attr': {'class': 'form-control', 'placeholder': 'Rue, num√©ro...'}}) }}
                {% for error in form.ligne1.vars.errors %}
                    <div class="text-danger small">{{ error.message }}</div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="ville" class="form-label fw-bold">Ville</label>
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Paris...'}}) }}
                    {% for error in form.ville.vars.errors %}
                        <div class="text-danger small">{{ error.message }}</div>
                    {% endfor %}
                </div>

                <div class="col-md-6 mb-3">
                    <label for="codePostal" class="form-label fw-bold">Code Postal</label>
                    {{ form_widget(form.codePostal, {'attr': {'class': 'form-control', 'placeholder': '75000'}}) }}
                    {% for error in form.codePostal.vars.errors %}
                        <div class="text-danger small">{{ error.message }}</div>
                    {% endfor %}
                </div>
            </div>

            <div class="mb-4">
                <label for="pays" class="form-label fw-bold">Pays</label>
                {{ form_widget(form.pays, {'attr': {'class': 'form-control', 'placeholder': 'France...'}}) }}
                {% for error in form.pays.vars.errors %}
                    <div class="text-danger small">{{ error.message }}</div>
                {% endfor %}
            </div>

            <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-check-circle"></i> Valider l'adresse
            </button>

            {{ form_end(form) }}
        </form>
    </div>
</div>
